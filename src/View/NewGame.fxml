<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="500.0" stylesheets="@ViewStyle.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.NewGameController">
   <columnConstraints>
      <ColumnConstraints maxWidth="250.0" prefWidth="250.0" />
      <ColumnConstraints maxWidth="230.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextField id="startGame_rowsInput" fx:id="newGame_rowsInput" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin></TextField>
      <TextField id="Game_colsInput" fx:id="newGame_colsInput" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin></TextField>
      <ImageView fx:id="newGame_mainCharacter_imageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets left="50.0" top="20.0" />
         </GridPane.margin></ImageView>
      <Button id="newGame_Button" fx:id="newGame_Button" mnemonicParsing="false" onAction="#startGame" text="Start Game" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="7">
         <GridPane.margin>
            <Insets bottom="20.0" left="90.0" top="20.0" />
         </GridPane.margin></Button>
      <Label contentDisplay="CENTER" prefWidth="100.0" text="Rows" textAlignment="CENTER" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="50.0" top="30.0" />
         </GridPane.margin></Label>
      <Label prefWidth="100.0" text="Columns" textAlignment="CENTER" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets left="50.0" top="10.0" />
         </GridPane.margin>
      </Label>
      <Label text="Main Character">
         <GridPane.margin>
            <Insets left="20.0" top="20.0" />
         </GridPane.margin>
      </Label>
      <HBox minHeight="50.0" prefHeight="66.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <Button id="startGame_mainCharacter_prevBtn" fx:id="newGame_mainCharacter_prevBtn" minWidth="50.0" mnemonicParsing="false" onAction="#getPrevMainCharacter" text="&lt;">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Button id="startGame_mainCharacter_nextBtn" fx:id="newGame_mainCharacter_nextBtn" minWidth="50.0" mnemonicParsing="false" onAction="#getNextMainCharacter" text="&gt;">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</GridPane>
